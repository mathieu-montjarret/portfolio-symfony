{% extends 'base.html.twig' %}

{% block title %}Portfolio | Log in{% endblock %}

{% block body %}

<div class="container space-top">
    <div class="row">
        <div class="col-6 mx-auto">
            <h1 class="text-center title-color">Log In</h1><br>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="form-group mb-3">
                    <label for="inputEmail" class="form-label mt-5">Email</label>
                    <input type="email" value="{{ last_username }}" name="Email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="form-group mb-3">
                    <label for="inputPassword" class="form-label">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                <div class=" mt-3">
                    <p>Don't have an account?</p>
                    <a href="{{ path('app_registration') }}" class="link-color">Register here</a>
                </div>

                <button class="btn btn-color mt-4" type="submit">Log In</button>
            </form>
        </div>
    </div>
</div>

{% endblock %}
