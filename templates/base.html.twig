<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Art By Caro | Photographie
			{% endblock %}
		</title>

		{% block stylesheets %}
	    	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">			
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
			<link rel="stylesheet" href="{{ asset('styles/app.css') }}">
			<link href="https://fonts.googleapis.com/css2?family=Mulish:wght@400;700&family=Philosopher:wght@400;700&display=swap" rel="stylesheet">

		{% endblock %}

	</head>

	<body>
		<header class="position-absolute">
			
			<nav class="{{ app.request.attributes.get('_route') == 'app_home' ? 'nav-background' : '' }}">
				<div class="logo">
    				<img src="{{ asset('img/logo-artbycaro.png') }}" alt="Art By Caro - Logo">
				</div>
				<div class="menu-icon nav-link {% if app.request.attributes.get('_route') == 'app_home' %}nav-home home-background{% endif %}">
					<i class="fa fa-bars fa-2x"></i>
				</div>
				<div class="menu">
					<ul class"">
						<li class="{% if app.request.attributes.get('_route') == 'app_home' %}home-background{% endif %}"><a href="{{path('app_home')}}" class="fs-5 nav-link font-philosopher {% if app.request.attributes.get('_route') == 'app_home' %}nav-home{% endif %}">Home</a></li>
						<li class="{% if app.request.attributes.get('_route') == 'app_home' %}home-background{% endif %}"><a href="{{path('app_gallery')}}" class="fs-5 nav-link font-philosopher {% if app.request.attributes.get('_route') == 'app_home' %}nav-home{% endif %}">Gallery</a></li>
						<li class="{% if app.request.attributes.get('_route') == 'app_home' %}home-background{% endif %}"><a href="{{path('app_presentation')}}" class="fs-5 nav-link font-philosopher {% if app.request.attributes.get('_route') == 'app_home' %}nav-home{% endif %}">Presentation</a></li>
						<li class="{% if app.request.attributes.get('_route') == 'app_home' %}home-background{% endif %}"><a href="{{path('app_service')}}" class="fs-5 nav-link font-philosopher {% if app.request.attributes.get('_route') == 'app_home' %}nav-home{% endif %}">Services</a></li>
						<li class="{% if app.request.attributes.get('_route') == 'app_home' %}home-background{% endif %}"><a href="{{path('app_guestbook')}}" class="fs-5 nav-link font-philosopher {% if app.request.attributes.get('_route') == 'app_home' %}nav-home{% endif %}">Guestbook</a></li>
						<li class="{% if app.request.attributes.get('_route') == 'app_home' %}home-background{% endif %}"><a href="{{path('app_contact')}}" class="fs-5 nav-link font-philosopher {% if app.request.attributes.get('_route') == 'app_home' %}nav-home{% endif %}">Contact</a></li>
						{% if app.user %}
							<li class="{% if app.request.attributes.get('_route') == 'app_home' %}home-background{% endif %}"><a href="{{path('app_logout')}}" class="fs-5 nav-link font-philosopher {% if app.request.attributes.get('_route') == 'app_home' %}nav-home{% endif %}">Log Out</a></li>
						{% else %}
							<li class="{% if app.request.attributes.get('_route') == 'app_home' %}home-background{% endif %}"><a href="{{path('app_login')}}" class="fs-5 nav-link font-philosopher {% if app.request.attributes.get('_route') == 'app_home' %}nav-home{% endif %}">Log In</a></li>
						{% endif %}
					</ul>
				</div>
			</nav>
		</header>


		{% block body %}{% endblock %}
		<footer></footer>
		{% block javascripts %}
				<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
				<script src="{{ asset('js/app.js') }}"></script>
		{% endblock %}
	</body>
</html>
